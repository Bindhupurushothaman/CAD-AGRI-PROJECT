<h1>My Choice of Pizza</h1>

<table class=table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Total Cost</th>
      <th>Description</th>
      <th>Size</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pizzas.each do |pizza| %>
      <tr>
        <td><%= pizza.name %></td>
        <td><%= pizza.cost %></td>
        <td><%= pizza.description %></td>
        <td><%= pizza.size %></td>
        <% if current_user %>
        <td><%= link_to 'Edit', edit_pizza_path(pizza) %></td>
        <td><%= link_to 'Delete', pizza, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Choice of Extra Topping', new_pizza_path, class: "btn btn-success"%>
