<%= form_with(model: product, local: true) do |form| %>
  <%= render "layouts/productcheck", item: @product %>
  <!-- passing on the object to save


#styling the product table -->

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="form-group">
    <%= form.label :ingredients %>
    <%= form.text_field :ingredients %>
  </div>

  <div class="form-group">
    <%= form.label :price %>
    <%= form.text_field :price %>
  </div>

  
  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_field :description %>
  </div>

  <div class="form-group">
    <%= form.label :quantity %>
    <%= form.text_field :quantity %>
  </div>

  <div class="form-group">
    <%= form.label :photo %>
    <%= form.file_field :photo %>
  </div>

  <div class="form-group">
    <%= form.label :for_sale %>
    <%= form.select :for_sale, options_for_select({ "Yes" => true, "No" => false }, @product.for_sale) %>
  </div>

  <div class="field">
    <%= form.label :vegan %>
    <%= form.check_box :vegan %>
  </div>

  <div class="field">
    <%= form.label :nonveg %>
    <%= form.check_box :nonveg %>
  </div>

  <div class="field">
    <%= form.label :featured %>
    <%= form.check_box :featured %>
  </div>

<div class="form-group">
    <%= form.label :category %>
    <%= form.text_field :category %>
  </div>

  <%= form.submit "Save", class: 'btn btn-success' %>

<% end %>
