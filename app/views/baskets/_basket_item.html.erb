<% if !@bill_item.nil? && @bill_item.errors.any? %>
<ul>
	<% @bill_item.errors.full_messages.each do |msg| %>
	<li> <%= msg %> </li>
	<% end %>
	</ul>
	<% end %>

	<% if @bill_items.size>0 %>
	<% @bill_items.each do |item| %>
	<div class="container">
	<div class="row">
		<div class="col-sm-8">
			<h3><%= item.product.name %> </h3>
		</div>
		<div class="col-sm-4">
			<div class="pull-right">
				<%= form_for(item, remote: true) do |form| %>
				<%= form.hidden_field :product_id, value: item.product.id %>
				<h5> <%= item.product.price %> </h5>
				<div class="form-group">
					<%= form.text_field :quantity, value: item.quantity.to_i, min:1, class: 'form-control' %>
				</div>
				<span Total Price: <%= item.total_price %> </span>
				<% end %>
			</div>
		</div>
	</div>

</div>
	<% end %>
	<% else %>
	<% end %> 