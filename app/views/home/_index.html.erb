<h1>Make your tummy a happy place</h1>

<% @products.each do |product| %>
 <div class="container">
	<div class="row">
		<div class="col-sm-8">
			<h3><%= product.name %> </h3>
		</div>
		<div class="col-sm-4">
			<div class="pull-right">
				<%= form_for(@bill_item, remote: true) do |form| %>
				<%= form.hidden_field :product_id, value: product.id %>
				<h5> <%= product.price %> </h5>
				<div class="form-group">
					<%= form.text_field :quantity, value: 1, min:1, class: 'form-control' %>
				</div>
				<%= form.submit "Add to Basket", class: 'btn btn-success btn-sm' %>
				<% end %>
			</div>
		</div>
	</div>

</div>
<% end %>

